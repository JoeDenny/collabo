<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= course.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%=course.name%></a></h4>
                    <p><%= course.description %></p>
                    <p>
                        <em>Submitted By <%= course.author.username %></em>
                    </p>
                    <% if(currentUser && course.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/courses/<%= course._id %>/edit">Edit</a>
                        <form id="delete-form" action="/courses/<%= course._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/courses/<%= course._id %>/comments/new">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>